@model IEnumerable<InapCertAuditory.Models.Participant>

@{
    ViewData["Title"] = "Index";
}

<h1> Listado </h1>

<p>
    <a asp-action="Create" class="btn btn-primary"> Adicionar Nuevo </a>
    <a asp-action="CreateFromXlsx" class="btn btn-success"> Cargar Listado Desde Excel </a>
    <a asp-action="CreateFromXlsx" class="btn btn-success"> Cargar Listado Desde Excel </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
              Nombre
            </th>
            <th>
               Apellido
            </th>
            <th>
                Cedula
            </th>
            <th>
               Observaciones
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rnc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observations)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ParticipantId" class="btn btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ParticipantId" class="btn btn-info">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.ParticipantId" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
